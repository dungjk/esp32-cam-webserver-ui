{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noImplicitAny": false,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2015", "ES2015.Symbol"]
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
